<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="come.example.fraleo.proyectofinal.Recibo_juego"
    android:weightSum="1">

    <TextView
        android:id="@+id/info_juego"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"/>

    <TextView
        android:id="@+id/info_precio"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/info_unidades"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/info_edicion"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/info_banda"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/info_caratula"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/info_coste_final"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imagen"
        android:src="@drawable/logo_play"/>


    <DigitalClock
        android:id="@+id/simpleDigitalClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/boton"
        android:text="Guardar factura"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"/>

</LinearLayout >
