<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.fraleo.feliceslos4.MainActivity">

    <AnalogClock
        android:id="@+id/reloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cmdLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Layout Lineal" />

    <Button
        android:id="@+id/cmdTabla"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Layout en Tabla"/>
    <Button
        android:id="@+id/cmdRelativo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Layout Relativo"/>

    <Button
        android:id="@+id/cmdGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Layout en Grid"/>


</GridLayout>
